# External API Configuration
# Copy this file to .env and fill in your actual credentials

# Core API URL
CORE_API_URL=https://apigw.ftzplus.dk/external/coreapi/api/

# Time Registration API URL
TIME_API_URL=https://apigw.ftzplus.dk/external/timeregistrationapi/api/

# API Authentication Key (used to obtain bearer token)
API_AUTH_KEY=your-api-key-here

# Azure API Management Subscription Key
APIM_SUBSCRIPTION_KEY=your-subscription-key-here

# Danlon OAuth2 Configuration
DANLON_OAUTH_REALM=danlon-integration-demo
DANLON_OAUTH_CLIENT_ID=
DANLON_OAUTH_CLIENT_SECRET=
